<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".LookingEngineActivity"
    tools:showIn="@layout/activity_looking_engine">

    <TextView
        android:id="@+id/browseCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="Courses"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/common"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Common" />

    <Button
        android:id="@+id/bme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Biomedical" />

    <Button
        android:id="@+id/chemical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chemical" />

    <Button
        android:id="@+id/civil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Civil" />

    <Button
        android:id="@+id/ece"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Electrical N Computer" />

    <Button
        android:id="@+id/esp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engineering Science Programme" />

    <Button
        android:id="@+id/industrial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Industrial" />

    <Button
        android:id="@+id/ms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Material Science" />

    <Button
        android:id="@+id/mech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mechanical" />

</LinearLayout>